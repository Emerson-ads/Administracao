{% extends "layout.njk" %}

{% block content %}

<div class="card">
        <section 
            class="avatar" 
            style=" background: url({{ cliente.avatar }}) no-repeat center center / cover">
        </section>
   
   
    <section class="details">
        <form  method="POST" action="/instructors?_method=PUT">


            <h3>Novo Instrutor</h3>
            
            {% include 'cliente/fields.njk' %}
            
            <input 
                type="hidden" 
                name="id" 
                value={{ cliente.id }} >
        </form>

        <form id="form-delete" action="/instructors?_method=DELETE" method="POST">
            <input type="hidden" name="id" value={{ instructor.id }} >
            <button type="submit">Delete</button>
        </form>
    </section>

   

</div>
    

    
{% endblock content %}